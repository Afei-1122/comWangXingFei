:root{
  --c-brand #23d0d0
  --c-brand-light #1dbdd2

  // 主色调
  --color-main var(--c-brand)
  // 底部栏色调
  --color-border #4dd0e1
  // 引用字体色
  --color-block #4dd0e1
  // 加粗色调
  --color-strong #26c6da
  // 代码样式
  --color-code #26c6da
  // 引用边框色
  --color-border-left #26c6da

  // 代码背景色
  --color-code-bg rgba(77,208,225,.08)
  // 引用背景色
  --color-block-bg rgba(77,208,225,.15)
}

.home-features .container h2{
  line-height 56px
  padding-bottom 0
  &:before{
    content: '';
    position: absolute;
    left: 4px;
    top: 12px;
    width: 26px;
    height: 26px;
    background-image: url(/eletron.png);
    background-position: 0 0;
    background-repeat: no-repeat;
    background-size: contain;
  }
  &:after{
    display none
  }
}
p.description{
  font-size 1.4rem !important
}
#main-title{
  color var(--c-brand)
  font-weight bold
  letter-spacing 0.2rem
  margin-bottom 10px
}
.nav-bar a.nav-bar-title{
  color var(--c-brand)!important
}

