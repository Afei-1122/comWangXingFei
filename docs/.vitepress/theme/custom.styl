:root{
  --c-brand #23d0d0
  --c-brand-light #1dbdd2
  --vp-c-brand: #0886DE;
  --vp-button-brand-border:#6BB6EB;
  --vp-button-brand-bg: #0886DE;
  --vp-c-brand-dark: #399EE5;
}

.home-features .container h2{
  line-height 56px
  padding-bottom 0
  &:before{
    content: '';
    position: absolute;
    left: 4px;
    top: 12px;
    width: 26px;
    height: 26px;
    background-image: url(/eletron.png);
    background-position: 0 0;
    background-repeat: no-repeat;
    background-size: contain;
  }
  &:after{
    display none
  }
}
p.description{
  font-size 1.4rem !important
}
#main-title{
  color var(--c-brand)
  font-weight bold
  letter-spacing 0.2rem
  margin-bottom 10px
}
.nav-bar a.nav-bar-title{
  color var(--c-brand)!important
}

.container
  justify-content: center;

a.sidebar-link-item.active{
}
.container .main {
    max-width: 800px;
}
.container .main .name .clip{
    font-size:40px !important;
}
.container .main p.text {
     font-size:30px !important;
}
.VPHero.has-image .container{
    text-align: center !important
}
.VPHero.has-image .actions {
     justify-content: center !important
}
.container .image {
    display: none;
}
a.VPButton.medium.brand {
    font-weight: 800!important;
}
a.VPButton.medium.alt{
  font-weight: 520!important;
}
.item .VPFeature[data-v-549c013f] {
    border: 1px solid var(--vp-c-bg-soft);
    border-radius: 12px!important;
    padding: 24px!important
    height: 100%!important;
    cursor: pointer!important;
}
div.icon {
    width: 100%!important;
    height: 48px!important;
    font-size: 24px!important;
    background-color:#0886de!important;
    color:#fff!important;
}
.item .VPFeature .title[data-v-549c013f] {
    line-height: 24px!important;
    font-size: 16px!important;
    font-weight: 600!important;
  
}
.item .VPFeature .details {
    color:var(--vp-c-text-2) !important;
}
.VPNavBarMenuGroup .button span:hover{
   color:var(--vp-c-brand)!important;
}
 
nav.VPNavBarMenu.menu a,button {
    font-size: 15px!important;
}
nav.VPNavBarMenu.menu div span{
    font-size: 15px!important;
}
aside.VPSidebar::-webkit-scrollbar {
    width: 0!important;
    height: 0!important;
}

p > img {
  @apply border
}

/* Empty lines are not rendered without this tweak. */
pre code span.line:not(:last-child) {
  min-height: 1.5rem;
}

a.title{
color: #606266 !important
} 

.VPButton.brand[data-v-2dba8ca9]:hover {
    border-color: #2fbcff !important;
    color: var(--vp-button-brand-hover-text);
    background-color: #2fbcff !important;
}
a.VPButton.medium.brand:hover{
    border-color: #2fbcff !important;
    color: var(--vp-button-brand-hover-text);
    background-color: #2fbcff !important;
}

p.text {
        background: linear-gradient(to right, red, #0886de);
        -webkit-background-clip: text;
        color: transparent;
        display: inline-block;
}



